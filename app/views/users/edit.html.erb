<div class="card">
<div class="card-title">
<h3> Editing Roles for: <%= @user.email %></h3>
</div>
<div class="card-body">
<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
<div id="error_explanation" >
<h2>
<%= pluralize(@user.errors.count, "errors") %>
prohibited this user from being saved
</h2>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>
<%= f.label :name %>
<%= f.text_field :name %>

<br />
<% User::ROLES.each do |role| %>
<label>
<%= f.check_box role %>
<%= role.to_s.humanize %>
</label>
<br />
<% end %>

<%= f.button :submit %>

<% end %>
</div>
<div class="card-footer">
<%= link_to "Cancel", user_path(@user), class: "btn btn-warning mt-2" %>
</div>
</div>


