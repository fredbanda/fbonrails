<b>UserID: </b>
<%= link_to user.id, user_path(user), class: "text-decoration-none" %>
<br />
<b>Email: </b>
<%= user.email %>
<br />
<b>Confirmed: </b>
<%= boolean_label(user.confirmed?) %>
<br />
<b><%= 'sign_in_count'.humanize %>: </b>
<%= user.sign_in_count %>
<br />
<b><%= 'current_sign_in_at'.humanize %>: </b>
<%= user.current_sign_in_at %>
<br />
<b><%= 'last_sign_in_at'.humanize %>: </b>
<%= user.last_sign_in_at %>
<br />
<b><%= 'current_sign_in_ip'.humanize %>: </b>
<%= user.current_sign_in_ip %>
<br />
<b><%= 'last_sign_in_ip'.humanize %>: </b>
<%= user.last_sign_in_ip %>
<br />
<b><%= 'locked_at'.humanize %>: </b>
<%= user.locked_at %>
<br />
<b><%= 'provider'.humanize %>: </b>
<%= user.provider %>
<br />
<b><%= 'uid'.humanize %>: </b>
<%= user.uid %>
<br />
<b><%= 'name'.humanize %>: </b>
<%= user.name %>
<br />
<b><%= 'image'.humanize %>: </b>
<% if user.image.present? %>
<%= image_tag user.image, size: '50x50', class: "rounded-circle" %>
<% end %>
<br />
<b><%= 'roles'.humanize %>:</b>
<%= user.active_roles.join(" , ") %>
<br />
<div class="btn-group">
<%= link_to "Back To All Users", users_path, class: "btn btn-sm btn-primary rounded mx-1" %>
<%= link_to "Edit User", edit_user_path(user), class: "btn btn-sm btn-success mx-1 rounded" %>
<% if current_user.admin? %>
<%= button_to 'Delete User', user, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-sm btn-danger rounded" %>
<% end %>
</div>



